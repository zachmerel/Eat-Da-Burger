<div class="container">
    <img class="center-img" id="burger-pic" src="assets/images/burgerpic.png">
</div>
<div class="row">
    <h1 id="title">Eat-Da-Burger!</h1>
</div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Burger List</h2>
        <ul>

            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Eaten Burger List</h2>
        <ul class="eaten-burgers">

            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="row center">
    <div class="col-md-4 center">
        <form class="create-form">
            <div class="input-group">
                <div class="input-group-prepend">
                </div>
                <textarea id="burger-input" class="form-control" aria-label="With textarea"></textarea>
            </div>


            <button id="submit-button" type="submit" class="btn btn-primary center">Submit</button>
        </form>
    </div>
</div>
<div class="row center">
    <p>Enter a burger you want to eat click the "Submit" button</p>
</div>
</div>